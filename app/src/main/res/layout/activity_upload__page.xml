<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_s"
    android:orientation="horizontal"
    tools:context=".Upload_Page">

    <Button
        android:id="@+id/button_choose_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Choose file"

        android:textColor="#5B6FE1"
        android:textSize="25sp"
        android:textStyle="bold"></Button>

    <EditText
        android:id="@+id/edit_text_file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/button_choose_image"
        android:hint="Enter food details"
        android:textColor="#050505"

        android:textColorHint="#0C0C0C"
        android:textSize="24sp">


    </EditText>

    <EditText
        android:id="@+id/edit_text_file_name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_choose_image"
        android:hint="Enter Your Mobile no.and Address "
        android:textColor="#050505"

        android:textColorHint="#0C0C0C"
        android:textSize="24sp">

    </EditText>

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/edit_text_file_name2"
        android:layout_marginBottom="90dp"

        android:background="#FCFDFD" />

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_upload"
        android:layout_marginBottom="17dp">


    </androidx.core.widget.ContentLoadingProgressBar>

    <ImageView
        android:layout_width="148dp"
        android:layout_height="119dp"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/logo" />
    <Button
        android:id="@+id/button_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:shadowColor="#CDC899"
        android:text="Upload"
        android:textColor="#4F4051"
        android:textColorHighlight="#673AB7"
        android:textSize="18sp">

    </Button>

    <TextView
        android:id="@+id/text_view_show_uploads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/button_upload"
        android:layout_alignBottom="@id/button_upload"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@id/button_upload"
        android:gravity="center"
        android:text="Show Uploads"
        android:textColor="#FFFEFE"
        android:textSize="18sp">

    </TextView>

</RelativeLayout>